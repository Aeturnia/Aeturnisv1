{
  "name": "@aeturnis/monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/server",
    "build": "npm run build --workspaces --if-present",
    "build:shared": "npm run build --workspace=packages/shared",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:ci": "npm run lint:ci --workspaces --if-present",
    "typecheck": "npm run build:shared && npm run typecheck --workspaces --if-present",
    "typecheck:ci": "npm run clean:build && npm run build:shared && npm run typecheck --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "format:check": "npm run format:check --workspaces --if-present",
    "install-all": "npm install && npm install --workspaces",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "clean:build": "rm -rf packages/*/dist packages/*/tsconfig.tsbuildinfo",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@remix-run/router": "^1.23.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/compression": "^1.8.1",
    "@types/morgan": "^1.9.10",
    "@types/pg": "^8.15.4",
    "@types/socket.io": "^3.0.1",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "argon2": "^0.43.0",
    "array-flatten": "^3.0.0",
    "autoprefixer": "^10.4.21",
    "compression": "^1.8.0",
    "cookie": "^1.0.2",
    "cookie-signature": "^1.2.2",
    "cors": "^2.8.5",
    "destroy": "^1.2.0",
    "dotenv": "^17.0.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.2",
    "encodeurl": "^2.0.0",
    "escape-html": "^1.0.3",
    "etag": "^1.8.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "fresh": "^0.5.2",
    "generic-pool": "^3.9.0",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "ioredis": "^5.6.1",
    "ioredis-mock": "^8.9.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mime": "^4.0.7",
    "morgan": "^1.10.0",
    "on-finished": "^2.4.1",
    "pg": "^8.16.3",
    "postcss": "^8.5.6",
    "range-parser": "^1.2.1",
    "rate-limit-redis": "^4.2.1",
    "redis": "^5.5.6",
    "send": "^1.2.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "socket.io-redis": "^5.4.0",
    "supertest": "^7.1.1",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.20.3",
    "utils-merge": "^1.0.1",
    "uuid": "^11.1.0",
    "vite": "^6.3.5",
    "winston": "^3.17.0",
    "workbox-webpack-plugin": "^7.3.0"
  }
}
