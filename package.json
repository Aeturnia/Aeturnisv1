{
  "name": "@aeturnis/server",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "install-deps": "npm install && npm run install-server && npm run install-client && npm run install-shared",
    "install-server": "cd packages/server && npm install",
    "install-client": "cd packages/client && npm install",
    "install-shared": "cd packages/shared && npm install"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.81.5",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "argon2": "^0.40.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.3.0",
    "joi": "^17.13.3",
    "jsdom": "^23.2.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "rate-limit-redis": "^4.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "redis": "^4.7.1",
    "socket.io-client": "^4.8.1",
    "vite": "^6.3.5",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.4",
    "@types/pg": "^8.15.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^9.2.0",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
